{
  "name": "openui-org",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm sb",
    "lint": "eslint .",
    "clean-node-modules": "rimraf ./docs/**/node_modules && rimraf ./packages/**/**/node_modules && rimraf ./node_modules",
    "prepare": "husky",
    "dev-playground": "turbo dev --filter=@openui-org/playground",
    "dev-docs": "turbo dev --filter=@openui-org/docs",
    "sb": "pnpm --filter @openui-org/storybook dev",
    "clean": "rm -rf .turbo node_modules pnpm-lock.yaml",
    "fmt": "prettier . --write --cache",
    "turbo-graph": "pnpm build --graph=dependency-graph.png",
    "clean-jest": "jest --clearCache",
    "clean-lock": "rimraf ./pnpm-lock.yaml",
    "compile": "turbo compile --filter=!@openui-org/docs --filter=!@openui-org/storybook",
    "build": "turbo build --filter=!@openui-org/docs --filter=!@openui-org/storybook --filter=!@openui-org/playground",
    "test": "jest --verbose --config ./jest.config.js",
    "postinstall": "husky install && pnpm --filter @openui-org/theme build",
    "release": "pnpm build && pnpm changeset version && pnpm changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.8.3",
    "@changesets/cli": "2.27.1",
    "@swc-node/jest": "^1.8.0",
    "@swc/core": "^1.4.17",
    "@swc/jest": "^0.2.36",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.28",
    "eslint": "8.57.0",
    "eslint-plugin-format": "0.1.0",
    "husky": "9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "turbo": "^1.13.3"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
