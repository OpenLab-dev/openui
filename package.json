{
  "name": "@openui-org/monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.1.1+sha512.14e915759c11f77eac07faba4d019c193ec8637229e62ec99eefb7cf3c3b75c64447882b7c485142451ee3a6b408059cdfb7b7fa0341b975f12d0f7629c71195",
  "scripts": {
    "dev": "pnpm web",
    "lint": "eslint . --fix",
    "prepare": "husky",
    "dev-playground-next": "turbo dev --filter=@openui-org/playground-next",
    "dev-playground-vue": "turbo dev --filter=@openui-org/playground-vue",
    "web": "turbo dev --filter=@openui-org/web",
    "sb": "pnpm --filter @openui-org/storybook dev --filter @openui-org/web",
    "clean": "rimraf .turbo pnpm-lock.yaml node_modules",
    "turbo-graph": "pnpm build --graph=dependency-graph.png",
    "clean-lock": "rimraf ./pnpm-lock.yaml",
    "compile": "turbo compile --filter=!@openui-org/docs --filter=!@openui-org/storybook",
    "build": "turbo build --filter=!@openui-org/docs --filter=!@openui-org/storybook --filter=!@openui-org/playground-next --filter=!@openui-org/playground-vue --filter=!@openui-org/web",
    "build-web": "turbo build --filter=@openui-org/web --filter=!@openui-org/storybook --filter=!@openui-org/playground-next --filter=!@openui-org/playground-vue",
    "postinstall": "husky install && pnpm --filter @openui-org/theme build",
    "release": "pnpm build && pnpm changeset version && pnpm changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.3",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.28",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "turbo": "^1.13.3"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
